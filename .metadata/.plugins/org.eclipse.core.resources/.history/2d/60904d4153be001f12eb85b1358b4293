package com.nt.main;

import java.util.Locale;
import java.util.Scanner;

import org.springframework.context.annotation.AnnotationConfigApplicationContext;

/**
 * Hello world!
 */
public class RBMSTest {
    public static void main(String[] args) {
        AnnotationConfigApplicationContext ctx = new AnnotationConfigApplicationContext();
        Scanner sc=new Scanner(System.in);
        System.out.println("enter language ");
        String lang=sc.next();
        System.out.println("enter country");
        String contry=sc.next();
        Locale locale=new Locale(lang,contry); // java.util/lang class
        msg1=ctx.getMessage("Welcome.msg", new Object[] {}, locale);
        msg2=ctx.getMessage("Goodbye.msg", new Object[] {}, locale);
        msg3=ctx.getMessage("FestivalWishes.msg", new Object[] {}, locale);
        System.out.println(msg1+"  "+msg2+"  "+msg3);
        ctx.close();
    }
}
